<link rel="stylesheet" href="/paymentPage.css">
<%- include('sellerHeader.ejs') %>

<main>
    <div class="payment-type box">
        <h2>Select Payment Method:</h2>
    
        <div class="payment-options">
          <button class="payment-option" data-type="card">ðŸ’³ Debit Card</button>
          <button class="payment-option" data-type="upi">ðŸ“± UPI</button>
        </div>
      
        <div id="upi-section" class="payment-section">
          <p>Select UPI App:</p>
          <select>
            <option value="phonepe">PhonePe</option>
            <option value="gpay">Google Pay</option>
            <option value="paytm">Paytm</option>
          </select>
          <button class="payment-btn">Pay via UPI</button>
        </div>
   
        <div id="card-section" class="payment-section">
          <label>Card Number:<br>
            <input type="text" placeholder="1234 5678 9012 3456">
          </label><br>
          <label>Card Holder Name:<br>
            <input type="text" placeholder="John Doe">
          </label><br>
          <label>CVV:<br>
            <input type="password" placeholder="123">
          </label><br>
          <button class="payment-btn" id="pay-card">Pay via Card</button>
        </div>
      </div>
      
      
    <div class="payment-details box">
        <div class="head">
            Payment Details
        </div>
        <div class="details">
            <div class="detail">
                <ul>
                    <li>
                        Your Mail: <span><%= mail %></span>
                    </li>
                </ul>
            </div>
            <div class="detail">
                <ul>
                    <li>
                        Subscription Type: <span id="type"><%= type %></span>
                    </li>
                </ul>
            </div>
            <div class="detail">
                <ul>
                    <li>
                        Subscription Duration: <span><%= duration %></span>
                    </li>
                </ul>
            </div>
            <div class="detail">
                <ul>
                    <li>
                        Price: <span><%= Price %></span>
                    </li>
                </ul>
            </div>
            <div class="detail">
                <ul>
                    <li>
                        Total Amount: <span><%= Price %></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</main>

<script>
    const buttons = document.querySelectorAll(".payment-option");
    const upi = document.getElementById("upi-section");
    const card = document.getElementById("card-section");
  
    buttons.forEach(btn => {
      btn.addEventListener("click", () => {
        // Reset all buttons
        buttons.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");
  
        // Toggle visibility
        if (btn.dataset.type === "upi") {
          upi.style.display = "block";
          card.style.display = "none";
        } else {
          upi.style.display = "none";
          card.style.display = "block";
        }
      });
    });

    let type=document.getElementById("type").innerText;
    let Card=document.getElementById("pay-card");
    Card.addEventListener("click",async ()=>{
        let res=await fetch("/seller/payment",{
            method:'POST',
            headers:{
                "Content-type":"application/json"
            },
            body:JSON.stringify({
                type:type
            })
        })
        let result=await res.json();

        if(res.status==200) {
            alert("Payment Done sucessfully");
        }
        else {
            alert("Something went wrong");
        }
    })
  </script>