<link rel="stylesheet" href="/sellerSubscription.css">
<%- include('sellerHeader.ejs') %>

    <div class="subs-container">
        <h1>Pricing & Subscriptions</h1>
        <div class="wrapper">
        <div class="box">
            <div class="heading">
                <% if(currentPlan===0) { %>
                    Basic Plan(Current Plan)
                <%} else {%>
                    Basic Plan
                <%}%>
            </div>
            <div class="benfits">
                <div class="yes benfit">
                    <ul>
                        <li>
                            Free
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            15 Posts/Month
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            Fresh Recomendations
                        </li>
                    </ul>
                </div>
                <div class="no benfit">
                    <ul>
                        <li>
                            No Ads shown
                        </li>
                    </ul>
                </div>
                <div class="no benfit">
                    <ul>
                        <li>
                            No featured Promotion
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="box">
            <div class="heading">
                <% if(currentPlan===1) { %>
                    VIP(Current Plan)
                <%} else {%>
                    VIP 
                <%}%>
            </div>
            <div class="benfits">
                <div class="yes benfit">
                    <ul>
                        <li>
                            100Rs /Month
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            50 Posts/Month
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            Fresh Recomendations
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            Your products in Featured Recomendations
                        </li>
                    </ul>
                </div>
                <div class="no benfit">
                    <ul>
                        <li>
                            No ads Shown
                        </li>
                    </ul>
                </div>
            </div>
            <% if(currentPlan<1) { %>
                <a href="/seller/subscription/vip">
                <div class="payment-btn">
                    Subscribe
                </div>
            </a>
            <%} %>
        </div>
        <div class="box">
            <div class="heading">
                <% if(currentPlan===2) { %>
                    Premium(Current Plan)
                <%} else {%>
                    Premium
                <%}%>
            </div>
            <div class="benfits">
                <div class="yes benfit">
                    <ul>
                        <li>
                            1299rs / year
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            100 Posts/Month
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            Fresh Recomendations
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            Your products in Featured Recomendations
                        </li>
                    </ul>
                </div>
                <div class="yes benfit">
                    <ul>
                        <li>
                            No ads Shown
                        </li>
                    </ul>
                </div>
            </div>
            
            <% if(currentPlan<2 && currentPlan==1) { %>
                <a href="/seller/subscription/premium">
                <div class="payment-btn">
                    Upgrade
                </div>
            </a>
            <%} else if(currentPlan==0)     {%>
                <a href="/seller/subscription/premium">
                    <div class="payment-btn">
                        Subscribe
                    </div>
                <%}%>
               
        </div>
        </div>
    </div>